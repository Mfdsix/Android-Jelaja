        <activity android:name=".ProviderView.ProviderActivity" />
        <activity android:name=".ProviderView.ProviderProfileActivity" />
        <activity android:name=".AdminView.AdminProfileActivity" />
        <activity android:name=".UserView.UserProfileActivity" />
