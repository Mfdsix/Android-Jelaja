        <activity android:name=".UserView.SearchResort" />
        <activity android:name=".UserView.JelaPay" />
        <activity android:name=".UserView.TopUpJela" />
        <activity android:name=".UserView.ConfirmJela" />
        <activity android:name=".ProviderView.ProviderDetail" />
        <activity android:name=".ProviderView.ResortDetail" />
        <activity android:name=".ProviderView.ResortProvider" />
        <activity android:name=".ProviderView.EditPhoto" />
        <activity android:name=".ProviderView.EditResort" />
        <activity android:name=".AdminView.ProviderRequest" />
        <activity android:name=".AdminView.DetailRequest" />
        <activity android:name=".UserView.DetailVehicle" />
        <activity android:name=".UserView.CheckoutVehicle" />
