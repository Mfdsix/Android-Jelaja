<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/twenty"
    android:layout_height="match_parent"
    tools:context=".AdminView.DetailTransaction">

    <TextView
        android:layout_width="match_parent"
        android:text="Detail Permintaan Topup"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:id="@+id/i_rich"
                android:layout_marginBottom="@dimen/ten"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/five"
                android:paddingBottom="@dimen/five"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Nama User"
                    android:textSize="@dimen/ten"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/t_name"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/five"
                android:paddingBottom="@dimen/five"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/ten"
                    android:text="Jumlah Topup"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/t_amount"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/five"
                android:paddingBottom="@dimen/five"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/ten"
                    android:text="Tanggal Topup"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/t_date"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Konfirmasi"
            android:background="@drawable/button_border2"
            android:textColor="@color/textWhite"
            android:id="@+id/b_confirm"
            android:layout_marginRight="@dimen/five"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Tolak"
            android:id="@+id/b_refuse"
            android:background="@drawable/button_border3"
            android:textColor="@color/textWhite"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>