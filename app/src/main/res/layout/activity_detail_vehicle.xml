<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserView.DetailVehicle">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/ten"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/photo"
                android:layout_marginBottom="@dimen/ten"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/t_company"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/twenty"
                android:textSize="@dimen/text_twenty"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/five"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_fourteen"
                android:text="@string/price"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/textPrimary"
                android:id="@+id/t_price"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/five"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_fourteen"
                android:text="@string/address"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/textPrimary"
                android:id="@+id/t_address"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/twenty"
            android:paddingLeft="@dimen/twenty"
            android:layout_marginBottom="@dimen/five"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_fourteen"
                android:text="@string/email"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/textPrimary"
                android:id="@+id/t_email"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/twenty"
            android:paddingLeft="@dimen/twenty"
            android:layout_marginBottom="@dimen/five"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_fourteen"
                android:text="@string/phone"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/t_phone"
                android:textColor="@color/textPrimary"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/twenty"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/ten"
                android:textAllCaps="false"
                android:background="@drawable/button_border2"
                android:text="Pesan"
                android:id="@+id/b_book"
                android:textColor="@color/textWhite"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>